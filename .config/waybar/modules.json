{
    "hyprland/workspaces": {
        "format": "{}",
        "format-icons": {
            "urgent": "",
            "active": "",
            "default": ""
        },
        "on-click": "activate",
        "all-outputs": true,
        "persistent-workspaces": {
            "*": 2
        }
    },

    "custom/appmenu": {
        "format": "⮝",
        "on-click": "fuzzel",
        "tooltip": false
    },

	"clock": {
		"format": "{:%a %b %d %I:%M %p}",
		"tooltip-format": "{:%Y-%m-%d | %I:%M:%S %p}",
		"interval": 1
	},

    "network": {
        "format-wifi": "   {signalStrength}%",
        "format-ethernet": "  Connected",
        "format-disconnected": "  Disconnected",
        "tooltip-format": "{ifname}: {ipaddr}",
        "max-length": 50
    },

    "pulseaudio": {
        "format": "{icon}  {volume}%",
        "format-muted": "  Muted",
        "format-icons": {
            "default": [" ", " ", " "]
        },
        "scroll-step": 5,
        "on-click": "hyprctl dispatch exec [float] pwvucontrol",
        "on-click-right": "hyprctl dispatch exec [float] qpwgraph"
    },

    "tray": {
        "spacing": 8,
        "icon-size": 16
    }
}
